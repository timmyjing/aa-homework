<form action="<%= albums_url %>" method="post">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">

  <label for="album-band">Album Band: </label>
  <select id="album-band" name="album[band_id]">
    <option disabled selected>--Select a Band--</option>
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"> <%= band.name %> </option>
    <% end %>
  </select>
  <br>


  <label for="album-title">Album Title: </label>
  <input id="album-title" type="text" name="album[title]">

  <br>
  <label for="album-year">Album Year: </label>
  <input id="album-year" type="text" name="album[year]">
  <br>
  <label for="album-live">Album Live: </label>
  <input id="album-live" type="radio" name="album[live]" value=true checked>
  <label for="album-live-true">Live </label>
  <input id="album-live" type="radio" name="album[live]" value=false>
  <label for="album-live-false">Studio </label>
  <br>
  <input type="submit" value="Create Album">
</form>
