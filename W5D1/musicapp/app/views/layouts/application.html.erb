<!DOCTYPE html>
<html>
  <head>
    <title>SweetMusic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lobster" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- <h1>🍭 SweetMusic 🍭</h1> -->
    <% if current_user %>
    <div id='nav-bar'>
    <%= button_to 'Home', bands_url, method: :get %>
    <%= button_to 'Log Out', sessions_url, method: :delete %>
    </div>
    <% else %>
    <div id='nav-bar'>
    <%= button_to 'Sign Up', new_user_url, method: :get%>
    <%= button_to 'Sign In', new_sessions_url, method: :get%>
    </div>
    <% end%>
    <br>
    <div id='content'>
      <h1>🍭 SweetMusic 🍭</h1>
      <%= render 'layouts/errors' %>
    <%= yield %>
    </div>
  </body>
</html>
